<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vault_row_layout"
    android:layout_width="match_parent"
    android:layout_height="135dp">

    <com.google.android.material.chip.Chip
        android:id="@+id/vault_row_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="4dp"
        android:checkable="false"
        android:fontFamily="monospace"
        android:password="true"
        android:text=" BoilerPlate"
        android:textColor="@color/CharlestonGreen"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="monospace"
        app:chipIcon="@drawable/ic_baseline_vpn_key_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vault_row_Username" />

    <RadioButton
        android:id="@+id/vault_row_Radio"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/ic_delete"
        android:backgroundTint="@color/LightCoral"
        android:buttonTint="@color/cardview_shadow_end_color"
        android:buttonTintMode="src_in"
        android:textColor="@color/LightCoral"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/vault_row_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="52dp"
        android:fontFamily="monospace"
        android:text="Username"
        android:textColor="@color/CharlestonGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vault_row_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:fontFamily="monospace"
        android:text="ProjectTitle"
        android:textSize="16sp"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ColourBlock"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/MazimumYellowRed"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="131dp" />

    <TextView
        android:id="@+id/vault_row_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>